<div class="container">
    <h1>Mes films par thème - <%= @list.name %></h1>
      <% if @list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
      <% else %>
      <div class="card-category" >
      <% end %>
      </div>


    <% @list.bookmarks.each do |bookmark| %>
       <div class="bookmark-card">
        <div class="column">
       <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %> Poster" class="movie-poster">
       </div>
       <div class="column">
          <p class="movie-title"><strong><%= bookmark.movie.title %></strong></p>
          <p class="movie-overview"><%= bookmark.movie.overview %></p>
          <p class="movie-rating">Rating: <%= bookmark.movie.rating %></p>
        </div>
         <div class="column small">
          <p class="comment-text"><%= bookmark.comment %></p>
        </div>
        <%= link_to "Remove Bookmark", bookmark_path(bookmark), class: "remove-button", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    <% end %>

    <br>
    <br>

    <%= link_to "Enregistrer un nouveau film", new_list_bookmark_path(@list), class: "link-button" %>
    <%= link_to "Retourner à l'accueil", lists_path, class: "link-button" %>
</div>
